{
  "name": "smart-notes-enhanced",
  "version": "2.0.0",
  "description": "Enhanced Smart Notes - A powerful desktop sticky notes application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.smartnotes.enhanced",
    "productName": "Smart Notes Enhanced",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    }
  },
  "keywords": [
    "sticky-notes",
    "desktop",
    "productivity",
    "notes",
    "electron"
  ],
  "author": "Smart Notes Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1",
    "marked": "^11.1.1",
    "highlight.js": "^11.9.0",
    "fuse.js": "^7.0.0",
    "date-fns": "^3.0.6"
  }
}